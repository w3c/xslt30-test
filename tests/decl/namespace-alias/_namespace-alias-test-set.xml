   <test-case name="namespace-alias-1006">
      <description>A circular chain of namespace aliases</description>
      <created by="Michael Kay" on="2019-01-23"/>
      <environment ref="namespace-alias-10"/>
      <dependencies>
         <spec value="XSLT10+"/>
