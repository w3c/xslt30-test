      </test>
      <result>
         <all-of>
            <serialization-matches>&lt;body&gt;value='&lt;%= "id" \+ idValue %&gt;'</serialization-matches>
            <serialization-matches>&lt;setProperty value=['"]&lt;%= "id" \+ idValue %&gt;['"]</serialization-matches>
         </all-of>
      </result>
   </test-case>

