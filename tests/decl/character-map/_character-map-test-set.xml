   <test-case name="character-map-023">
      <description/>
      <keywords>single-character-map xml-output-method</keywords>
      <created by="Michael Kay" on="2012-11-07"/>
      <environment>
         <source role=".">
            <content><![CDATA[<root>Hello &lt; &gt; World</root>]]></content>
         </source>
      </environment>
