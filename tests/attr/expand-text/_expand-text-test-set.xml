      </test>
      <result>
         <assert>/out = "Goodbye Mars!"</assert>
      </result>
   </test-case>
   
   <test-case name="cvt-005">
      <description>Atomization</description>
      <created by="Michael Kay" on="2013-01-25"/>
      <dependencies>
         <spec value="XSLT30+"/>
      </dependencies>
      <test>
         <stylesheet file="cvt-005.xsl"/>
         <initial-template name="main"/>
      </test>
